@model GraemSheppardOnline.ViewModels.AuthenticateVM

@{
    ViewData["Title"] = "Login";
}

<div class="container main-container">

    <div class="row">
        <div class="col-12">
            <h2>Login</h2>
            <hr />
        </div>
    </div>
    <form method="post">
        <div class="validation-summary">
            <div asp-validation-summary="All"></div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Email" class="control-label text-nowrap">Email</label>
                        </div>
                        <div class="col-md-9">
                            <input required asp-for="Email" type="email" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Password" class="control-label text-nowrap">Password</label>
                        </div>
                        <div class="col-md-9">
                            <input required asp-for="Password" type="password" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>Don't have an account? <a href="/Register">Register</a></p>
                <div class="spacer"></div>
                <button class="btn btn-outline-light button-width" type="submit">Login</button>
            </div>
        </div>
        
    </form>

</div>



