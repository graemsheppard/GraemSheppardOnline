@model GraemSheppardOnline.ViewModels.FileManagerDetailsVM;

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/map.css" type="text/css" />
<div class="container main-container">

    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-6">
                    <h2>Files</h2>
                </div>
                <div class="col-6 text-right">
                    <div class="btn-group dropleft" id="dropdown-group">
                        <h2></h2>
                        <i class="cursor-pointer h3 fa fa-download mr-2" onclick="location.href='/FileManager/Download/@Model.Id'"></i>
                        <i class="dropdown-toggle h2 fa fa-bars" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                        <div class="dropdown-menu collapse">
                            <button class="dropdown-item" type="button" id="delete-button">Delete</button>
                            <div class="container collapse" id="delete-menu">
                                <div class="dropdown-divider"></div>
                                <p><strong>Are you sure you want to delete this user?</strong></p>
                                <div class="row dropdown-buttons">
                                    <button class="btn btn-danger" type="button">No</button>
                                    <button class="btn btn-success" type="button" onclick="window.location.href='/FileManager/Delete/@Model.Id'">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
    <div class="spacer"></div>
    <div class="form-group">

        <div class="row">
            <div class="col-md-4">
                <label asp-for="UploadDate" class="control-label text-nowrap">Uploaded On</label>
            </div>
            <div class="col-md-8">
                <label class="control-label">@(Model.UploadDate?.ToString("dd'/'MM'/'yyyy HH:mm") ?? "N/A")</label>
            </div>
        </div>

    </div>
    <div class="form-group">

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Id" class="control-label text-nowrap">Id</label>
            </div>
            <div class="col-md-8">
                <label class="control-label">@Model.Id</label>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Name" class="control-label text-nowrap">File Name</label>
            </div>
            <div class="col-md-8">
                <label class="control-label">@Model.Name</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="DisplayName" class="control-label text-nowrap">Display Name</label>
            </div>
            <div class="col-md-8">
                <label class="control-label">@Model.DisplayName</label>
            </div>
        </div>
    </div>
 

    <button class="btn btn-outline-dark button-width" onclick="location.href='/FileManager'">Back</button>
    <button class="btn btn-dark button-width" onclick="location.href='/FileManager/Edit/@Model.Id'">Edit</button>
    <div class="spacer"></div>

</div>

@section Scripts {
    <script>
        $('#dropdown-group').on('hidden.bs.dropdown', () => {
            $('#delete-menu').hide();
        });

        $('#delete-button').click((e) => {
            e.stopPropagation();
            $('#delete-menu').slideToggle(250);
        });
    </script>

}

